#!/bin/bash
BUILD_DIR=$1
CACHE_DIR=$2
cd $BUILD_DIR
echo $BUILD_DIR
echo $CACHE_DIR


git clone https://github.com/stedolan/jq.git
cd jq
autoreconf -i
./configure --enable-shared
make
make install

export JD=$CACHE_DIR

echo "============BUILD======================"
ls -R $BUILD_DIR

echo "============CACHE======================"
ls -R $CACHE_DIR

echo "============FIND======================"
find /app -name \*jq\* -print

export LD_LIBRARY_PATH=/app/jq/.libs/

#!/bin/bash
BUILD_DIR=$1
CACHE_DIR=$2
cd $BUILD_DIR
echo $BUILD_DIR
echo $CACHE_DIR


git clone https://github.com/stedolan/jq.git
cd jq
autoreconf -i
./configure --enable-shared
make
make install DESTDIR=$CACHE_DIR

export JD=$CACHE_DIR

find /app -name \*jq\* -print

gem install ruby-jq -- \
  --with-opt-lib="${CACHE_DIR}/usr/local/lib" \
  --with-opt-include="${CACHE_DIR}/usr/local/include"
